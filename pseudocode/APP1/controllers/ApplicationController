APP1.ApplicationController = M.Controller.extend({

    isAppInitialized: NO,

   initApplication: function() {
       if(this.isAppInitialized) {
           return;
       }

       this.setTemplate(M.TemplateOnePage);

       this.template.setContent({
            firstArea: 'Page1'
       });

       this.switch();

       this.isAppInitialized = YES;
   }

});